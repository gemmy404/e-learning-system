{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["esnext"],
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["src/types"],
    "moduleResolution": "node10",
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "noEmit": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  }
}
